@model ContactFormModel
<section class="page-header">
    <h2 class="page-title color--white">@LayoutResource.Contact_Us</h2>
</section>
<div class="breadcumb-area section-padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <ul class="breadcumb">
                    <li class="breadcumb__list"><a class="breadcumb__link" asp-controller="home" asp-action="index">@LayoutResource.Home</a></li>
                    <li class="breadcumb__list"><a class="breadcumb__link current" asp-controller="home" asp-action="index">@LayoutResource.Contact_Us</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<div class="main-content-wrapper">
    <!-- Contact Us area Start -->
    <section class="contact-area section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-md-4">
                    <div class="store-info">
                        <h4>@LayoutResource.STORE_INFORMATION</h4>
                        <div class="store-info__item">
                            <i class="fa fa-map-marker"></i>
                            <div class="store-info__data">
                                <p>@Model.SiteInfo.Address</p>
                            </div>
                        </div>
                        <div class="store-info__item">
                            <i class="fa fa-phone"></i>
                            <div class="store-info__data">
                                <p>Call Us: <br> <a href="tel:@Model.SiteInfo.Number">@Model.SiteInfo.Number</a></p>
                            </div>
                        </div>
                        <div class="store-info__item">
                            <i class="fa fa-envelope"></i>
                            <div class="store-info__data">
                                <p>Email Us: <br> <a href="@Model.SiteInfo.Email">@Model.SiteInfo.Email</a></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9 col-md-8">
                    <div class="form-box">
                        <div class="section-title">
                            <h2>Contact Us</h2>
                        </div>
                        @if (!string.IsNullOrWhiteSpace(ViewBag.msg))
                        {
                            <div class="col-lg-12 col-md-8">
                                @ViewBag.msg
                                </div>
                        }
                        <form class="form form--contact"  method="post" asp-action="index" style="margin-top: 5%;">
                            <div class="form__group row">
                                <label for="contact_name" class="col-lg-3 col-12 form__label text-lg-right">Full Name</label>
                                <div class="col-lg-7 col-12">
                                    <input type="text" asp-for="Contact.FullName" id="contact_name" class="form__input">
                                </div>
                            </div>
                            <div class="form__group row">
                                <label for="contact_email" class="col-lg-3 col-12 form__label text-lg-right">Email Address</label>
                                <div class="col-lg-7 col-12">
                                    <input type="email" asp-for="Contact.Email" id="contact_email" class="form__input">
                                </div>
                            </div>

                            <div class="form__group row">
                                <label for="contact_message" class="col-lg-3 col-12 form__label text-lg-right">Message</label>
                                <div class="col-lg-9">
                                    <textarea id="contact_message" asp-for="Contact.Message" class="form__input form__input--textarea"></textarea>
                                </div>
                            </div>
                            <div class="form__group text-right">
                                <button type="submit" class="btn btn--small btn-style-3">Submit</button>
                            </div>

                            <div class="form__output">
                                <p class="form__messege"></p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Us area End -->
</div>