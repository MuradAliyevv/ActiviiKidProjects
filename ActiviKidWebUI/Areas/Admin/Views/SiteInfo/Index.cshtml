<div class="col-xl-6 col-md-6 col-sm-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">News</h4>
            <p class="card-description">
                Add News <code> <a class="btn btn-primary" asp-action="NewsAdd">Create News</a></code>
            </p>
            <div class="table-responsive">
                <table class="table table-bordered border-primary mb-0">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.News)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/img/@item.ImagePath" width="80" height="30" />
                                </td>
                                <td>@item.Name</td>
                                @if (item.Description.Length > 10)
                                {
                                    <td>@item.Description.Substring(0,10).ToString()</td>
                                }
                                else
                                {
                                    <td>@item.Description</td>
                                }

                                <td>
                                    <a asp-action="NewsUpdate" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen"></i></a>
                                    <a asp-action="NewsDelete" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fa-solid fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
