<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">About Us</h4>

            <div class="table-responsive">
                <table class="table table-bordered border-primary mb-0">

                    <thead>
                        <tr>
                            <th>About Us</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.AboutUs != null)
                        {
                            <tr>
                                <td class="py-1" style="filter: brightness(0.5);">
                                    @if (@Model.AboutUs.Description.Length > 150)
                                    {
                                        @Model.AboutUs.Description.Substring(0, 150)
                                    }
                                    else
                                    {
                                        @Model.AboutUs.Description
                                    }
                                </td>

                                <td>
                                    <a asp-action="AboutusUpdate" asp-route-id="@Model.AboutUs.Id" class="btn btn-sm btn-warning"><i class="fa-solid fa-pen"></i></a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
<div class="col-xl-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Site Info</h4>

            <div class="table-responsive">
                <table class="table table-bordered border-primary mb-0">

                    <thead>
                        <tr>
                            <th>Logo</th>
                            <th>Fav Icon</th>
                            <th>Name</th>
                            <th>Number</th>
                            <th>Email</th>
                            <th>Address</th>
                            @if (Model.SiteInfo != null)
                            {
                             
                            }
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>

                        @if (Model.SiteInfo != null)
                        {
                                <tr>
                                    <td class="py-1" style="filter: brightness(0.5);">
                                        <img src="~/assets/img/@Model.SiteInfo.Logo" alt="Logo" width="80" height="30" />
                                    </td>
