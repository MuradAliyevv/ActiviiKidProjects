@model SiteInfoViewModel
@{
    ViewData["Title"] = "Site Info / Index";
    var i = 0;
}

<div class="col-xl-6 col-sm-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category</h4>
            <p class="card-description">
                Add Category <code> <a class="btn btn-primary" asp-action="CategoryAdd">Create Category</a></code>
            </p>
            <div class="table-responsive">
                <table class="table table-bordered border-primary mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Имя</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Categories)
                        {
                                <tr>

                                    <td>@item.Name</td>
                                @foreach (var itemm in Model.CategoryRus)
                                {
                                    if (item.Id == itemm.Id)
                                    {
                                                    <td>@itemm.Name</td>
                                    }
                                }

                                    <td>
                                        <a asp-action="CategoryUpdate" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen"></i></a>
                                        <a asp-action="CategoryDelete" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>

                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>



<div class="col-xl-6 col-sm-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Color</h4>
            <p class="card-description">
                Add Color<code> <a class="btn btn-primary" asp-action="AddColor">Create Color</a></code>
            </p>
            <div class="table-responsive">
                <table class="table table-bordered border-primary mb-0">
                    <thead>
                        <tr>
                            <th>Colors</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Colors)
                        {
                                <tr>

                                    <td>
                                        <img src="~/assets/img/@item.ImagePath" width="40" height="40">
                                    </td>
                                    <td>
                                        <a asp-action="UpdateColor" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen"></i></a>
                                        <a asp-action="DeleteColor" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

<div class="col-xl-6 col-sm-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Services</h4>
            <p class="card-description">
                Add Services <code> <a class="btn btn-primary" asp-action="ServicesAdd">Services</a></code>
            </p>
            <div class="table-responsive">
                <table class="table table-bordered border-primary mb-0">
                    <thead>
                        <tr>
                              <th>Icon</th>
                            <th>Name</th>
                            <th>Имя</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Services)


                        {
                                <tr>
                                    <td>
                                    @Html.Raw(item.ImagePath)
                                    </td>
                                    <td>@item.Name</td>
                                @for (int b = 0; b < Model.ServicesRus.Count; b++)
                                {
                                    @if (item.Id == Model.ServicesRus[b].Id)
                                    {
                                                    <td>@Model.ServicesRus[b].Name    <p style="display: none;">@(i++) </p></td>

                                    }
                                }


    

                                    <td>
                                        <a asp-action="ServicesUpdate" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen"></i></a>
                                        <a asp-action="ServicesDelete" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fa-solid fa-trash"></i></a>
                                    </td>
                                </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

