@model OurClients

@{
    ViewData["Title"] = "Site Info / Client Add";

}

@section addcss{
    <style>


        .label-situation {
            background-color: transparent;
            position: relative !important;
        }

            .label-situation > label {
                width: 100%;
                height: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                color: rgba(0, 0, 0, 0.10) !important;
            }

            .label-situation > img {
                width: 100%;
            }

        .input-situation {
            opacity: 0 !important;
            background-color: transparent;
            position: absolute !important;
            height: 200px !important
        }

        #plusIcon, #plusLogo {
            position: absolute;
        }

        .row div:nth-child(2) > div > label {
            text-align: left !important;
        }
        /*        input, textarea, .container-fluid{
                                        background-color: midnightblue !important;
                                    }


                                    .validation-summary-errors ul li{
                                        color: white;
                                    }*/




        label {
            border-color: transparent !important;
            color: black !important;
            background-color: transparent !important;
        }
    </style>
}

<div class="container p-5">
    <h2 class="text-dark">Add Client</h2>



    <form method="post" action="Add" enctype="multipart/form-data">

        <div class="col-md-12 col-sm-12">

            @if (!string.IsNullOrEmpty(ViewBag.News))
            {
                <div class="col-md-12">@ViewBag.News</div>
            }
            <div class="col-md-12" asp-validation-summary="All"></div>

            <div class="form-group">
                <label class="form-control" for="name">Image</label>
                
                <input id="name" type="file" class="form-control text-dark" name="file" />
                <input asp-for="ImagePath"  type="hidden" class="form-control text-dark" />
                <input asp-for="Id" type="hidden" class="form-control text-dark" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>

            <input class="btn btn-primary my-5" type="submit" value="Add" />
        </div>


    </form>

</div>



